@model DrugsSystem.WebUI.Models.OrderUnits.DrugTypesViewModel
@{
    ViewBag.Title = "GetDrugTypes";
}

<h2>GetDrugTypes</h2>

@using (Html.BeginForm("Calculate","OrderUnits"))
{
    if (Model.Names.Count > 0)
    {
        <input type="submit" class="btn btn-primary" value="Order" />
    }

    @Html.HiddenFor(x => x.DepotID, Model.DepotID)

    <ul>
        @for (int i = 0; i < Model.Values.Count; i++)
        {
            <li>
                @Html.Label(Model.Names[i])
                @Html.HiddenFor(x => x.Names[i], Model.Names[i])
                @Html.EditorFor(x => x.Values[i], Model.Values)
                @Html.HiddenFor(x => x.IDs[i], Model.IDs)
            </li>
        }
    </ul>
}